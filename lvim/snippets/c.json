{
    "include once": {
        "prefix": "once",
        "body": [
            "#ifndef ${1:FILE_H}",
            "#define $1",
            "$0",
            "#endif /* end of include guard: $1 */",
        ],
        "description": "Header include guard"
    },
    "extern C": {
        "prefix": "nocpp",
        "body": [
            "#ifdef __cplusplus",
            "extern \"C\" {",
            "#endif",
            "$0",
            "#ifdef __cplusplus""} /* extern \"C\" */",
            "#endif"
        ],
        "description": "Disable C++ name mangling in C headers"
    }
}

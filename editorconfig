# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab

[*.go]
indent_style = tab

[*.rs]
indent_size = 4

[*.java,*.gradle]
indent_size = 4

[{*.c,*.cpp,*.h}]
indent_size = 4
